<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:elevation="5dp"
            android:background="#fff"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:text="Sign Up"
                android:textStyle="bold"
                android:textColor="#6191ff"
                android:textSize="17sp" />

            <ImageButton
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:background="@null"
                android:src="@drawable/ic_left_arrow"
                android:tint="#6191ff" />

        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/rel"
            android:background="#6191ff" />


        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/already_registered"
            android:layout_below="@+id/view"
            android:background="@null">


            <LinearLayout
                android:id="@+id/LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="50dp"
                android:background="@null"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Quant Masters"
                    android:textColor="#6191ff"
                    android:textSize="37sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sub_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="You are Only one Step Away from Completing Your Account."
                    android:textColor="#757575"
                    android:textSize="15sp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp">


                </RelativeLayout>

                <EditText
                    android:id="@+id/Date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/edit_back"
                    android:hint="DOB"
                    android:inputType="date"
                    android:longClickable="false"
                    android:maxLength="13"
                    android:focusable="false"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textColorHint="#757575"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <View
                    android:layout_width="match_parent"
                    android:background="@drawable/login_button_back"
                    android:layout_height="1dp"/>


                <EditText
                    android:id="@+id/USN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textAllCaps="true"
                    android:background="@drawable/edit_back"
                    android:hint="USN"
                    android:inputType="text"
                    android:longClickable="false"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textColorHint="#757575"
                    android:textSize="16sp"
                    android:visibility="visible" />
                <View
                    android:layout_width="match_parent"
                    android:background="@drawable/login_button_back"
                    android:layout_height="1dp"/>



                <AutoCompleteTextView
                    android:id="@+id/Branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_back"
                    android:hint="Qualification"
                    android:inputType="textAutoComplete"
                    android:longClickable="false"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textColorHint="#757575"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:background="@drawable/login_button_back"
                    android:layout_height="1dp"/>

                <AutoCompleteTextView
                    android:id="@+id/College"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_back"
                    android:hint="College"
                    android:inputType="textAutoComplete"
                    android:longClickable="false"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textColorHint="#757575"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:background="@drawable/login_button_back"
                    android:layout_height="1dp"/>

                <AutoCompleteTextView
                    android:id="@+id/YOP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_back"
                    android:focusable="false"
                    android:hint="Year of Passing"
                    android:inputType="textAutoComplete"
                    android:longClickable="false"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textColorHint="#757575"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:background="@drawable/login_button_back"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/sub"
                    android:layout_width="wrap_content"
                    android:textColor="#757575"
                    android:textSize="15sp"
                    android:checked="true"
                    android:layout_height="wrap_content"
                    android:text="Sign Me Up For Email Updates About Government Exams,Company Interview Dates and Much More." />


                </RelativeLayout>


                <TextView
                    android:id="@+id/sub_title2"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Click on Get Started to Complete the Sign Up Process."
                    android:textColor="#757575" />


                <Button
                    android:id="@+id/Get_Started"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/update_button_background"
                    android:padding="12dp"
                    android:textColor="#fff"
                    android:layout_marginBottom="150dp"
                    android:text="Get Started" />


            </LinearLayout>


        </ScrollView>

        <RelativeLayout
            android:id="@+id/already_registered"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#fff">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bdbdbd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Already have an account? Log in."
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:id="@+id/sign"
                android:textSize="13sp" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
