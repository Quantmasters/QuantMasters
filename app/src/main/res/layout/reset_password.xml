<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:elevation="5dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Reset Password"
            android:textStyle="bold"
            android:textColor="#6191ff"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:src="@drawable/ic_left_arrow"
            android:tint="#6191ff"/>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/rel"
        android:background="#FF02023E" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view"
        android:background="@null">

        <LinearLayout
            android:id="@+id/LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:background="@null"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Quant Masters"
                android:textColor="#6191ff"
                android:textSize="37sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Verify your Account"
                android:textColor="#757575"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_back"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="13dp"
                android:textColor="#000"
                android:textColorHint="#757575"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:background="@drawable/login_button_back"
                android:layout_height="1dp"/>

            <EditText
                android:id="@+id/Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_back"
                android:hint="Date of Birth"
                android:inputType="date"
                android:padding="13dp"
                android:focusable="false"
                android:textColor="#000"
                android:textColorHint="#757575"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:background="@drawable/login_button_back"
                android:layout_height="1dp"/>

            <Button
                android:id="@+id/Login_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Next"
                android:background="@drawable/update_button_background"
                android:padding="12dp"
                android:textColor="#fff" />

            <RelativeLayout
                android:id="@+id/fel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/Forgot_Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Forgot password?"
                    android:textColor="#3f51b5"
                    android:textSize="15sp"
                    android:visibility="invisible" />

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/Sign_up"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#fff">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#FF02023E" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="1dp"
            android:text="LOGIN"
            android:id="@+id/sign"
            android:textColor="#6191ff"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>

