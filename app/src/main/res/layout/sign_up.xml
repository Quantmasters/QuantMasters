<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:elevation="5dp"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:text="Sign Up"
            android:textStyle="bold"
            android:textColor="#6191ff"
            android:textSize="17sp"  />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:src="@drawable/ic_left_arrow"
            android:tint="#6191ff" />

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@+id/rel"
        android:background="#fff" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view"
        android:background="@null">


        <LinearLayout
            android:id="@+id/LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="35dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Quant Masters"
                android:textColor="#6191ff"
                android:textSize="37sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Enter All The Details to Create An Account ."
                android:textColor="#757575"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">


            </RelativeLayout>


            <EditText
                android:id="@+id/Full_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_back"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#757575"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:background="@drawable/login_button_back"
                android:layout_height="1dp"/>

            <EditText
                android:id="@+id/Last_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_back"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:textColor="#000"
                android:textColorHint="#757575"
                android:textSize="16sp"/>
            <View
                android:layout_width="match_parent"
                android:background="@drawable/login_button_back"
                android:layout_height="1dp"/>


            <EditText
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_back"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#757575"
                android:textSize="16sp" />


            <View
                android:layout_width="match_parent"
                android:background="@drawable/login_button_back"
                android:layout_height="1dp"/>

            <EditText
                android:id="@+id/Phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_back"
                android:hint="Phone"
                android:inputType="phone"
                android:longClickable="false"
                android:maxLines="1"
                android:maxLength="10"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#757575"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:background="@drawable/login_button_back"
                android:layout_height="1dp"/>



            <EditText
                android:id="@+id/Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_back"
                android:hint="Password (8 Characters Long)"
                android:inputType="textPassword"
                android:longClickable="false"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#757575"
                android:textSize="16sp"/>
            <View
                android:layout_width="match_parent"
                android:background="@drawable/login_button_back"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/sub_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password Must be at least 8 characters long.\nPlease include one Capital Letter in your Password."
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:layout_marginStart="5sp"
                android:gravity="center_vertical"
                android:textColor="#757575" />

            <EditText
                android:id="@+id/Confirm_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_back"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:longClickable="false"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#757575"
                android:textSize="16sp" />
            <View
                android:layout_width="match_parent"
                android:background="@drawable/login_button_back"
                android:layout_height="1dp"/>



            <Button
                android:id="@+id/Get_Started"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/update_button_background"
                android:padding="12dp"
                android:textColor="#fff"
                android:text="NEXT"/>




            <RelativeLayout
                android:id="@+id/fel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/add_member"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/terms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/add_member"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Terms and Condition."
                    android:textColor="#6191ff"
                    android:textSize="15sp"
                    android:visibility="invisible" />


            </RelativeLayout>


        </LinearLayout>


    </ScrollView>

    <RelativeLayout
        android:id="@+id/already_registered"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#fff">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bdbdbd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/sign"
            android:layout_centerVertical="true"
            android:text="Already have an account? Log in."
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:textStyle="bold" />

    </RelativeLayout>


</RelativeLayout>

